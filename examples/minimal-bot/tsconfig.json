{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ESNext"],
    "target": "ES2022",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["main.ts"],
  "exclude": ["node_modules", "dist"]
}
