{
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"]
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@executeautomation/playwright-mcp-server@latest"],
      "env": {}
    },
    "screeps-mcp": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "-e",
        "SCREEPS_TOKEN=${COPILOT_MCP_SCREEPS_TOKEN}",
        "-e",
        "SCREEPS_HOST=${COPILOT_MCP_SCREEPS_HOST:-screeps.com}",
        "-e",
        "SCREEPS_SHARD=${COPILOT_MCP_SCREEPS_SHARD:-shard3}",
        "ghcr.io/ralphschuler/screeps-mcp:latest"
      ]
    },
    "screeps-docs-mcp": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "-e",
        "DOCS_CACHE_TTL=${COPILOT_MCP_DOCS_CACHE_TTL:-3600}",
        "ghcr.io/ralphschuler/screeps-docs-mcp:latest"
      ]
    },
    "screeps-wiki-mcp": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "-e",
        "WIKI_CACHE_TTL=${COPILOT_MCP_WIKI_CACHE_TTL:-3600}",
        "ghcr.io/ralphschuler/screeps-wiki-mcp:latest"
      ]
    },
    "grafana-mcp": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "-e",
        "GRAFANA_URL=https://ralphschuler.grafana.net",
        "-e",
        "GRAFANA_SERVICE_ACCOUNT_TOKEN=${COPILOT_MCP_GRAFANA_SERVICE_ACCOUNT_TOKEN}",
        "mcp/grafana",
        "-t",
        "stdio"
      ]
    },
    "screeps-typescript-mcp": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "-e",
        "TYPES_CACHE_TTL=${COPILOT_MCP_TYPES_CACHE_TTL:-3600}",
        "ghcr.io/ralphschuler/screeps-typescript-mcp:latest"
      ]
    }
  }
}
