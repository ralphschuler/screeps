{
  "name": "screeps-typescript-starter",
  "version": "3.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "bundle:check": "node scripts/check-bundle-size.js",
    "build": "rollup -c && npm run bundle:check",
    "push": "npm run bundle:check && rollup -c --environment DEST:screeps",
    "test": "npm run test:unit",
    "test:unit": "mocha test/unit/**/*.ts",
    "test:coverage": "c8 --reporter=text --reporter=html --reporter=lcov npm run test:unit",
    "test:coverage:report": "c8 report --reporter=html",
    "test:integration": "npm run build && DOCKER_DEFAULT_PLATFORM=linux/amd64 screeps-performance-server --botFilePath=dist",
    "test:performance": "DOCKER_DEFAULT_PLATFORM=linux/amd64 screeps-performance-server --botFilePath=dist",
    "test:performance:logs": "node scripts/performance-test-with-logs.js",
    "watch": "rollup -cw --environment DEST:screeps"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/screepers/screeps-typescript-starter.git"
  },
  "author": "",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/screepers/screeps-typescript-starter/issues"
  },
  "homepage": "https://github.com/screepers/screeps-typescript-starter#readme",
  "devDependencies": {
    "@rollup/plugin-alias": "^6.0.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/chai": "^5.2.3",
    "@types/lz-string": "^1.5.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "@types/screeps": "^3.3.8",
    "@types/sinon": "^21.0.0",
    "@types/sinon-chai": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "c8": "^10.1.3",
    "chai": "^6.2.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.24.0",
    "minimist": "^1.2.8",
    "mocha": "^11.7.5",
    "prettier": "^3.7.4",
    "rollup": "^4.54.0",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-screeps": "^1.0.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "screeps-api": "^1.10.0",
    "screeps-performance-server": "^1.14.7",
    "sinon": "^21.0.1",
    "sinon-chai": "^4.0.1",
    "ts-node": "^10.2.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "@ralphschuler/screeps-chemistry": "*",
    "@ralphschuler/screeps-defense": "*",
    "@ralphschuler/screeps-economy": "*",
    "@ralphschuler/screeps-pathfinding": "*",
    "@ralphschuler/screeps-remote-mining": "*",
    "@ralphschuler/screeps-spawn": "*",
    "@ralphschuler/screeps-stats": "*",
    "@ralphschuler/screeps-utils": "*",
    "@ralphschuler/screeps-visuals": "*",
    "lz-string": "^1.5.0",
    "screeps-cartographer": "^1.8.13",
    "source-map": "~0.7.6"
  },
  "overrides": {
    "axios": "^1.7.0",
    "shelljs": "^0.8.5"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "compilerOptions": {
      "module": "esnext",
      "moduleResolution": "node"
    }
  }
}
