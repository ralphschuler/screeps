{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es2018"],
    "target": "es5",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": false,
    "strict": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false
  },
  "exclude": ["node_modules", "src/tests/**/*"]
}
