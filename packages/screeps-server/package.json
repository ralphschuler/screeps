{
  "name": "@ralphschuler/screeps-server",
  "version": "1.0.0",
  "description": "Local Screeps private server with test infrastructure for integration and performance testing",
  "type": "module",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "scripts": {
    "test": "npm run test:integration && npm run test:performance",
    "test:integration": "mocha test/integration/**/*.test.ts",
    "test:performance": "mocha test/performance/**/*.test.ts",
    "test:packages": "mocha test/packages/**/*.test.ts",
    "test:watch": "mocha --watch test/**/*.test.ts",
    "test:coverage": "c8 --reporter=text --reporter=html --reporter=lcov npm run test:integration",
    "posttest": "node scripts/analyze-tests.js"
  },
  "keywords": [
    "screeps",
    "server",
    "testing",
    "integration",
    "performance"
  ],
  "author": "",
  "license": "Unlicense",
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.9",
    "@types/screeps": "^3.3.8",
    "@types/sinon": "^21.0.0",
    "@types/sinon-chai": "^4.0.0",
    "c8": "^10.1.3",
    "chai": "^6.2.2",
    "mocha": "^11.7.5",
    "screeps-server-mockup": "^1.5.1",
    "sinon": "^21.0.1",
    "sinon-chai": "^4.0.1",
    "ts-node": "^10.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.4.3"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "compilerOptions": {
      "module": "esnext",
      "moduleResolution": "node"
    }
  }
}
