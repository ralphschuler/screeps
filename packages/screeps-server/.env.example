STEAM_KEY=<your steam api key>
TUNNEL_TOKEN=<your cloudflare tunnel token>
MAPTOOL_PASS=<your super secret password>

# InfluxDB Configuration
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=screeps-password
INFLUXDB_ORG=screeps
INFLUXDB_BUCKET=screeps
INFLUXDB_TOKEN=screeps-influxdb-token

# Grafana Configuration
