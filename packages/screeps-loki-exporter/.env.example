# Screeps Authentication
# Use either token OR username + password
SCREEPS_TOKEN=
SCREEPS_USERNAME=
SCREEPS_PASSWORD=

# Screeps Server Configuration
SCREEPS_PROTOCOL=https
SCREEPS_HOST=screeps.com
SCREEPS_PORT=
SCREEPS_PATH=/

# Grafana Loki Configuration
GRAFANA_LOKI_URL=https://logs-prod-012.grafana.net/loki/api/v1/push
GRAFANA_LOKI_USERNAME=123456
GRAFANA_LOKI_API_KEY=your_api_key_here

# Optional: Additional labels to add to all logs
LOKI_EXTRA_LABELS=env:production,game:screeps

# Optional: Batch settings
LOKI_BATCH_SIZE=100
LOKI_BATCH_INTERVAL_MS=5000
