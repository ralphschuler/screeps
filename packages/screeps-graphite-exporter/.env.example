# Screeps Grafana Cloud Graphite Exporter Configuration

# Exporter Mode Settings
EXPORTER_MODE=memory
EXPORTER_POLL_INTERVAL_MS=15000
EXPORTER_MIN_POLL_INTERVAL_MS=10000
EXPORTER_MEMORY_PATH=stats
EXPORTER_MEMORY_FULL=false
EXPORTER_SHARD=shard0

# Grafana Cloud Graphite Configuration
GRAFANA_CLOUD_GRAPHITE_URL=https://graphite-prod-01-eu-west-0.grafana.net/graphite/metrics
GRAFANA_CLOUD_API_KEY=your_grafana_cloud_api_key_here
GRAFANA_CLOUD_GRAPHITE_PREFIX=screeps

# Screeps API Configuration
SCREEPS_PROTOCOL=https
SCREEPS_HOST=screeps.com
# SCREEPS_PORT=21025

# Screeps Authentication (use either token OR username+password)
SCREEPS_TOKEN=your_screeps_token_here
# SCREEPS_USERNAME=your_username
# SCREEPS_PASSWORD=your_password
